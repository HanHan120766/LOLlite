/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
}
.headerView {
  width: 100%;
}
.headerSearch {
  width: 714rpx;
  border-radius: 10rpx;
  height: 56rpx;
  background-color: #eaebec;
  text-align: center;
  margin: 10rpx auto;
  font-size: 28rpx;
  color: #7a7b8a;
  line-height: 56rpx;
}
.headerTabView {
  border-bottom: #f1f1f1 1px solid;
  width: 100%;
  height: 78rpx;
  overflow: auto;
}
.tabCell1 {
  position:relative;
  width: 160rpx;
  height: 40rpx;
  margin: 18rpx 0;
  color: #7a7b8a;
  line-height: 40rpx;
  font-size: 28rpx;
  padding-right: 25rpx;
  text-align: center;
  border-left: 1.5px #eaebec solid;
  float: left;
}
.tabCell1:first-child {
  border-left: 0px #eaebec solid;
}
.tabCell1::after {
  position: absolute;
  transform:rotate(-45deg);
  top: 6rpx;
  content: "";
  width: 15rpx;
  height: 15rpx;
  margin-left: 10rpx;
  border-left: 3rpx solid #7a7b8a;
  border-bottom: 3rpx solid #7a7b8a;
}

.tabCell2 {
  position:relative;
  width: 160rpx;
  height: 40rpx;
  margin: 18rpx 0;
  color: #cc9e3d;
  line-height: 40rpx;
  font-size: 28rpx;
  padding-right: 25rpx;
  text-align: center;
  border-left: 1.5px #eaebec solid;
  float: left;
}
.tabCell2:first-child {
  border-left: 0px #eaebec solid;
}
.tabCell2::after {
  position: absolute;
  transform:rotate(-45deg);
  top: 16rpx;
  content: "";
  width: 15rpx;
  height: 15rpx;
  margin-left: 10rpx;
  border-right: 3rpx solid #cc9e3d;
  border-top: 3rpx solid #cc9e3d;
}

.heros_list {
  white-space: nowrap;
  width: 690rpx;
  margin: 0 30rpx;
}
.hero_cell {
  float: left;
  width: 345rpx;
  height: 100rpx;
  margin-top: 30rpx;
  background-color: #fff;
}
.hero_img {
  float: left;
  width: 98rpx;
  height: 98rpx;
  border-radius: 50%;
  border: #cc9e3d 1rpx solid;
}
.hero_info {
  float: left;
  margin-left: 20rpx;
}
.hero_title {
  font-size: 28rpx;
  color: #333;
  font-family: PingFangSC-Regular;
}
.hero_name {
  font-size: 24rpx;
  color: #666;
  line-height: 30rpx;
  font-family: PingFangSC-Light;
}
.hero_content {
  font-size: 24rpx;
  color: #cc9e3d;
  line-height: 28rpx;
  font-family: PingFangSC-Light;
}
